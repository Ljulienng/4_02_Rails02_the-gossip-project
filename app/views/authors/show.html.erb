<body>

  <div class="card text-white bg-dark mb-3">
    <div class="card-header" style="color:brown">
      <%=@author.first_name%> <%= @author.last_name.upcase%> (<%=@author.age%> years old, lives in <%=@author.city.name%>)
    </div>

    <div class="card-body">
      <p class="card-text"> About <%=@author.first_name%>:</p>
      <p class="card-text"> <%=@author.description%></p>
    </div>
    <div class="card-body">
      <p class="card-text"> Contact info:</p>
      <p class="card-text"> <%=@author.email%></p>
    </div>

    <div class="card text-white bg-dark mb-3"><br />
      <p class="card-text"> <%=@author.first_name%>'s Gossips :</p>
        <% @author.written_gossips.each do |gossip| %>
        <li><%= link_to "#{gossip.title}", user_gossip_path(params[:user_id],gossip.id) %></li>
        <% end %><br />
    </div>

</body>