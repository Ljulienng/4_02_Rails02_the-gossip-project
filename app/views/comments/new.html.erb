<body>

  <div class="alert alert-danger" role="alert">
    <% if @comment.errors.any? %>
      <p>Comment could not be created for the following reasons :</p>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="card">
    <div class="card-body">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

        <%= label_tag 'Content' %>
        <%= text_area_tag 'Your Comment', @comment.content, :class => "form-control" %>
        <br />
        <%= submit_tag "Create Comment", :class => "btn btn-dark btn-sm" %>

      <% end %>
    </div>
  </div>

  <div class ="button-box col-lg-12" id="end-box">
    <br />
    <%= link_to "Back to Comments", user_gossip_comments_path(params[:user_id],params[:gossip_id]), :class => "btn btn-primary btn-lg" %>
  </div>
  <div class ="button-box col-lg-12" id="end-box">
    <br />
    <%= link_to "Back to Gossip", user_gossip_path(params[:user_id],params[:gossip_id]), :class => "btn btn-teal   btn-lg" %>
  </div>

</body>