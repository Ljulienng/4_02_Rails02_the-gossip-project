
<div class="card" style ="text-align: center">
     <div class="card-body">
        <%= form_tag url_for(action: 'create'), method: "post" do %>
          <%= label_tag 'Content' %>

          <%= text_area_tag 'Your comment', @comment.content, :class => "form-control" %>
          <br /> <br />

          <%= submit_tag "Create comment", :class => "btn btn-dark btn-sm" %>

        <% end %>
      </div>
</div>
    

