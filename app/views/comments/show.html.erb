<body>

  <div class="card">
    <div class="card-header" >
      Comment n°<%= params[:id] %>
      On Gossip n°<%= params[:gossip_id] %>, <%= Gossip.find(params[:gossip_id]).title %>, written by <%= Gossip.find(params[:gossip_id]).author.first_name %>
    </div>

    <div class="card-body">
      <%= link_to "#{@comment.author.first_name}", user_gossip_author_path(params[:user_id],params[:gossip_id],@comment.author.id) %> said:
      <p class="card-text"><%= @comment.content %></p>
      
      <div class ="button-box col-lg-12" id="edit-stuff">
        <% if @comment.author.id == session[:user_id] %>
          <div><%= link_to "Edit Comment", edit_user_gossip_comment_path(params[:user_id],params[:gossip_id],@comment), :class => "btn btn-success btn-sm" %></div>
          <div><%= link_to "Delete Comment", user_gossip_comment_path(params[:user_id],params[:gossip_id],@comment), method: :delete, data:{ confirm: "Are you sure you want to delete this comment?"}, :class => "btn btn-danger btn-sm"%></div>
        <% end %>
        <div><%= link_to "Comment Comment", user_gossip_comment_undercomment_index_path(params[:user_id],params[:gossip_id],@comment),:class => "btn btn-dark btn-sm"%></div>
      </div>

    </div>
  </div>

  <div class ="button-box col-lg-12" id="end-box">
    <br />
    <%= link_to "Back to Comments", user_gossip_comments_path(params[:user_id],params[:gossip_id]), :class => "btn btn-primary btn-lg" %>
  </div>

  <div class ="button-box col-lg-12" id="end-box">
    <br />
    <%= link_to "Back to Gossip", user_gossip_path(params[:user_id],params[:gossip_id]), :class => "btn btn-primary btn-lg" %>
  </div>

</body>